//*SOLVED TASK USING Declarative programming PARADIGM /*
function only_odd2(array $arrayOfNumbers): array
{
    return array_filter($arrayOfNumbers, static fn($number) => $number % 2 !== 0 && $number !== 0);
}

var_dump(assert(only_odd2([1, 3]) == true));


